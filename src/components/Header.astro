---
import MenuDrop from '../img/MenuDrop.astro'
---

<header class="flex justify-between items-center py-3 w-[1120px]">
    <img class="rounded-full w-12 h-12" src="/public/photo.jpg" alt="Juan Carlos foto">
    <nav>
        <ul class="flex flex-row gap-x-10 opacity-80">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/projects">Projects</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
</header>


<!-- Menu de forma responsiva -->
<style>
    header{
        flex-wrap: wrap;
    }

    nav ul{
        flex-wrap: wrap;
    }

    @media screen and (max-width: 768px){
        header{
            flex-direction: column;
            align-items: center;
        }

        nav ul{
            flex-direction: column;
            gap: 5px;
        }

        nav ul li{
            marigin: 5px 0;
        }
    }
</style>
