---
import HTMLIcon from "./Icon/HTMLIcon.astro";
import PythonIcon from "./Icon/PythonIcon.astro";
import PHPIcon from "./Icon/PHPIcon.astro";
import Bootstrap from "./Icon/Bootstrap.astro";
import JsIcon from "./Icon/JsIcon.astro";
import PreviewIcon from "./Icon/PreviewIcon.astro";
import GitIcon from "./Icon/GitIcon.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-[#f06529] text-white",
    icon: HTMLIcon,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#306998] text-white",
    icon: PythonIcon,
  },
  PHP: {
    name: "PHP",
    class: "bg-[#8892be] text-white",
    icon: PHPIcon,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-[#007bff] text-white",
    icon: Bootstrap,
  },
  JS: {
    name: "JavaScript",
    class: "bg-[#f0db4f] text-black",
    icon: JsIcon,
  },
};

const PROJECTS = [
  {
    title: "Plataforma de generación de tickets",
    description:
      "Plataforma de generación de tickets para soporte. Permite a los usuarios generar tickets de soporte y a los administradores gestionarlos.",
    link: "#",
    github: "#",
    image: "../public/project.png",
    tags: [TAGS.HTML, TAGS.PYTHON, TAGS.PHP, TAGS.JS],
  },
];
---

{
  PROJECTS.map((project) => (
    <div class="flex flex-col gap-y-16">
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <img
            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105 rounded-2xl"
            src={project.image}
            alt={project.title}
          />
        </div>
        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl text-blue-500 dark:text-white font-bold">{project.title}</h3>
          <div class="flex flex-wrap mt-2 tools">
            <ul class="flex flex-row mb-2 gap-x-2">
              {project.tags.map((tag) => (
                <li>
                  <span
                    class={`flex justify-center items-center gap-x-2 rounded-full text-xs py-1 px-2  ${tag.class}`}
                  >
                    {typeof tag === "object" && <tag class="icon" /> ? (
                      <tag.icon class="size-6" />
                    ) : null}
                    {typeof tag === "object" ? tag.name : tag}
                  </span>
                </li>
              ))}
            </ul>
          </div>
          <div class="mt-2 text-gray-700 dark:text-gray-400">
            {project.description}
          </div>
          <footer class="flex items-end justify-start mt-4 gap-x-4">
            <div class="flex w-30 justify-center items-center gap-x-2 mt-4 bg-black/10 p-2 rounded-lg py-2 px-4 hover:text-white hover:bg-black transition">
              <PreviewIcon />
              <a href={project.link ? project.link : "#"} class="">
                {" "}
                Ver
              </a>
            </div>
            <div class="flex w-30 justify-center items-center gap-x-2 mt-4 bg-black/10 p-2 rounded-lg py-2 px-4 hover:text-white hover:bg-black transition">
              <GitIcon />
              <a href={project.link ? project.link : "#"} class="">
                {" "}
                Ver
              </a>
            </div>
          </footer>
        </div>
      </article>
    </div>
  ))
}